<%- include("partials/header.ejs") %> 

<body>

    <section>
        <div class="video-container">
            <div class="video-title">
              <h2>[Genre] - Clip #1</h2>
            </div>
            <div id="video-box" style="cursor: pointer;">
              <p>Click here to play Clip #1</p>
              <!-- Hidden video element -->
              <video id="video-player" controls style="display:none;">
                <source src="cooperation-clip1.mp4" type="video/mp4">
                Your browser does not support HTML video.
              </video>
            </div>
          </div>
    </section>
    <section>
        <div class="clip-details-container">
            <div class="clip-details">
              <h3>Clip Details:</h3>
              <ul>
                <li>Genre: <span>Action</span></li>
                <li>Duration: <span>120 mins</span></li>
                <li>Media Type: <span>Movie</span></li>
              </ul>
            </div>
            <div class="rating-scale">
              <p>Please use the following scale to rate this clip:</p>
              <div class="circles">
                <!-- Ratings 1 to 10 -->
                <span class="circle" data-rating="1" tabindex="0"></span>
                <!-- Repeat for each rating up to 10 -->
                <span class="circle" data-rating="10" tabindex="0"></span>
              </div>
            </div>
        </div>
    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>  
    <script src="/script.js"></script>    
</body>


